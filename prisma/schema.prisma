generator client {
  provider   = "prisma-client"
  output     = "../app/generated/prisma"
  extensions = [accelerate()]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Model {
  id          String    @id @default(cuid())
  name        String
  brand       String
  yearStart   Int?
  yearEnd     Int?
  vehicles    Vehicle[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([name, brand])
}

model Seller {
  id        String    @id @default(cuid())
  name      String
  email     String?   @unique
  phone     String?
  website   String?
  vehicles  Vehicle[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Vehicle {
  id          String    @id @default(cuid())
  model       Model     @relation(fields: [modelId], references: [id])
  modelId     String
  seller      Seller?   @relation(fields: [sellerId], references: [id])
  sellerId    String?
  mileageKm   Int?
  priceEUR    Decimal?  @db.Decimal(10, 2)
  color       String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([modelId])
  @@index([sellerId])
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
