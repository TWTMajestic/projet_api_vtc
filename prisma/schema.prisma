generator client {
  provider   = "prisma-client"
  output     = "../app/generated/prisma"
  extensions = ["accelerate()"]
}

datasource db {
  provider = "postgresql"
}

model Model {
  id        String    @id @default(cuid())
  name      String
  brand     String
  yearStart Int?
  yearEnd   Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vehicles  Vehicle[]

  @@unique([name, brand])
}

model Seller {
  id        String    @id @default(cuid())
  name      String
  email     String?   @unique
  phone     String?
  website   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vehicles  Vehicle[]
}

model Vehicle {
  id        String   @id @default(cuid())
  modelId   String
  sellerId  String?
  mileageKm Int?
  priceEUR  Decimal? @db.Decimal(10, 2)
  color     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  model     Model    @relation(fields: [modelId], references: [id])
  seller    Seller?  @relation(fields: [sellerId], references: [id])

  @@index([modelId])
  @@index([sellerId])
}

enum Role {
  USER
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  refreshToken String?
}
